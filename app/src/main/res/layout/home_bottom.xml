<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="55dp">

    <RadioGroup
        android:id="@+id/radiogroup_fragment"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/attention_rb_fragment"
            android:layout_weight="1"
            android:button="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="直播" />
        <RadioButton
            android:id="@+id/bangumi_rb_fragment"
            android:layout_weight="1"
            android:button="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="推荐"/>
        <RadioButton
            android:id="@+id/discover_rb_fragment"
            android:layout_weight="1"
            android:button="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="番剧"/>
        <RadioButton
            android:id="@+id/live_rb_fragment"
            android:layout_weight="1"
            android:button="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="分区"/>
        <RadioButton
            android:id="@+id/recommended_rb_fragment"
            android:layout_weight="1"
            android:button="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="关注"/>
        <RadioButton
            android:id="@+id/region_rb_fragment"
            android:layout_weight="1"
            android:button="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="发现"/>
    </RadioGroup>
</LinearLayout>
